{
  "name": "logger-app",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "test": "jest --watchAll --coverage --verbose",
    "pretty": "prettier --write .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "npx tsc && pnpm copy-files",
    "start": "node dist/server.js",
    "docker-start": "pnpm run build && pnpm run start",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/server.js\"",
    "copy-files": "copyfiles -u 1 src/data/emails.txt dist/"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.2",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "concurrently": "^7.3.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.0.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
